---
import { Icon } from "astro-icon/components";

const currentYear = new Date().getFullYear();

const socialLinks = [
    { name: "GitHub", icon: "line-md:github", url: "https://github.com/eschmechel" },
    { name: "LinkedIn", icon: "line-md:linkedin", url: "https://linkedin.com/in/eschmechel" },
    { name: "Twitter", icon: "line-md:twitter-x", url: "https://twitter.com/eragondev" },
    { name: "BlueSky", icon: "line-md:bluesky", url: "https://bsky.app/profile/eschmechel.bsky.social" },
];

const quickLinks = [
    { name: "Home", url: "/#home" },
    { name: "Work", url: "/#work" },
    { name: "Experiences", url: "/experiences" },
    { name: "About", url: "/about" },
];
---

<footer class="bg-surface border-t border-border mt-auto" role="contentinfo">
    <div class="max-w-7xl mx-auto px-4 py-12">
        <!-- Main footer content -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-12 max-w-5xl w-full lg:w-5xl mx-auto">
            <!-- Socials Column -->
            <nav aria-label="Social media links">
                <h3 class="text-text font-bold text-xl mb-4">Socials</h3>
                <ul class="flex flex-col gap-3">
                    {socialLinks.map(link => (
                        <li>
                            <a 
                                href={link.url}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="text-text-muted hover:text-accent-500 transition-colors inline-flex items-center gap-2"
                                aria-label={`Visit my ${link.name} profile`}
                            >
                                <Icon name={link.icon} size={24} aria-hidden="true" />
                                <span>{link.name}</span>
                            </a>
                        </li>
                    ))}
                </ul>
            </nav>

            <!-- Quick Links Column -->
            <nav aria-label="Site navigation">
                <h3 class="text-text font-bold text-xl mb-4">Quick Links</h3>
                <ul class="flex flex-col gap-3">
                    {quickLinks.map(link => (
                        <li>
                            <a 
                                href={link.url}
                                class="text-text-muted hover:text-accent-500 transition-colors"
                            >
                                {link.name}
                            </a>
                        </li>
                    ))}
                </ul>
            </nav>

            <!-- Contact Column -->
            <div>
                <h3 class="text-text font-bold text-xl mb-2">Get In Touch</h3>
                <div class="flex flex-col gap-3">
                    <a 
                        href="mailto:elliottschmechel@gmail.com"
                        class="text-text-muted hover:text-accent-500 transition-colors inline-flex items-center gap-1"
                        aria-label="Send me an email"
                    >
                        <Icon name="line-md:email" size={24} aria-hidden="true" />
                        <span>elliottschmechel@gmail.com</span>
                    </a>
                    <a 
                        href="/resume.pdf"
                        class="text-text-muted hover:text-accent-500 transition-colors inline-flex items-center gap-1"
                        aria-label="Download my resume"
                    >
                        <Icon name="line-md:document" size={24} aria-hidden="true" />
                        <span>Download Resume</span>
                    </a>
                </div>
            </div>
        </div>

        <!-- Copyright bar -->
        <div class="max-w-5xl mx-auto mt-12">
            <div class="flex flex-col md:flex-row justify-between items-center gap-4">
                <p class="text-text-muted text-sm">
                    Â© {currentYear} Elliott Schmechel | GNU General Public License v3.0
                </p>
                <p class="text-text-muted text-sm">
                    Built with <a href="https://astro.build" target="_blank" rel="noopener noreferrer" class="text-accent-500 hover:text-accent-300 transition-colors">Astro</a> & <a href="https://tailwindcss.com" target="_blank" rel="noopener noreferrer" class="text-accent-500 hover:text-accent-300 transition-colors">Tailwind CSS</a>
                </p>
            </div>
        </div>
    </div>
</footer>